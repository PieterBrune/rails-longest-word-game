<%start_time = Process.clock_gettime(Process::CLOCK_MONOTONIC)%>
<h1>Longest Word Game</h1>

<h2>New Game</h2>

<div class="letters">
  <% @letters.each do |letter| %>
    <p><%= letter.capitalize %></p>
  <% end %>
</div>

<form action="/score" method="post">
  <input type="text" name="word" placeholder="Enter a word here...">
  <input type="submit" class="submit" value="play">
  <input type="hidden" name="letters" value="<%= @letters.join %>">
  <%end_time = Process.clock_gettime(Process::CLOCK_MONOTONIC)%>
  <%time = end_time - start_time%>
  <input type="hidden" name="time-taken" value=<%= time%>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
